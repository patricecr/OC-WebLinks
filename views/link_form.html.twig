{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}
    
{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="well">
    {% if linkForm %}
        {{ form_start(linkForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(linkForm.title, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_errors(linkForm.title) }}
                    {{ form_widget(linkForm.title, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(linkForm.url, null, { 'label_attr':  {
                    'class': 'col-sm-4 control-label'
                }}) }}
                <div class="col-sm-6">
                    {{ form_errors(linkForm.url) }}
                    {{ form_widget(linkForm.url, { 'attr':  {
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-3">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </div>
        {{ form_end(linkForm) }}
    {% else %}
        <p><a href="{{ path('login') }}">Login</a> to submit a link.</p>
    {% endif %}
</div>
{% endblock %}